        <comboBox objectName="combo_loading_deep" label="加载深度：" currentIndex="1" toolTip="加载深度">
          <item text="机型" data="0" />
          <item text="系统" data="1" />
          <item text="表项" data="2" />
          <item text="数据项" data="3" />
        </comboBox>
      </group>
      <group objectName="group_showitem" title="数据显示">
        <checkBox objectName="check_show_offset" text="数据偏移" checked="false" autosave="true" />
        <checkBox objectName="check_show_type" text="数据类型" checked="true" enabled="false" autosave="true" />
        <checkBox objectName="check_show_value" text="实际数值" checked="true" autosave="true" />
        <checkBox objectName="check_show_data" text="原始数值：" checked="true" autosave="true" />
        <comboBox objectName="combo_show_data_format" currentIndex="0" toolTip="原始数值格式" autosave="true" >
