        <action objectName="action_export" text="导出状态" icon=":/icd/common/images/export.png" iconSize="32,32" />
        <action objectName="action_run_all" text="启动通道" icon=":/icd/common/images/run_all.png" iconSize="32,32" />
        <action objectName="action_stop_all" text="关闭通道" icon=":/icd/common/images/stop_all.png" iconSize="32,32" />
      </group>
      <group objectName="group_window" title="窗口">
        <checkBox objectName="check_show_nav" text="显示导航栏" checked="true" autosave="true" />
      </group>
